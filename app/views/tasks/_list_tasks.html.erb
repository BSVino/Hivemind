<% if @tasks.length > 0 %>
<p>
  <b>Tasks:</b>
  <ul>
  <% @tasks.each do |task| %>
    <li>
      <strong><%= link_to task.name, task %></strong>
      <% if @show_folders == true && task.task_folder != nil %>
	      (From <%= link_to task.task_folder.name, task_folder_path(task.task_folder.id) %>)
	  <% end %>
      <%= task.tasktype %>
      <%= link_to 'Edit', edit_task_path(task) %>
      (<%= link_to 'Delete', task, confirm: 'Are you sure?', method: :delete %>)
    </li>
  <% end %>
  </ul>
</p>
<% end %>

